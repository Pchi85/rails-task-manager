<div class="container">
  <h1>My Tasks</h1>
  <% @tasks.each do |task| %>
    <p class="make-bold"><% if task.completed == true %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-stop"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" },
      class: 'glyphicon glyphicon-trash' %></p>
  <% end %>
  <br>
  <p id="symbol">
  <%#= link_to "Add a new task", new_task_path %>

  <%= link_to(new_task_path) do %>
    <i class="fas fa-plus"></i>
    Add a new task
  <% end %>
  </p>
</div>


